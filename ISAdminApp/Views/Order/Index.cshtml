@model List<Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Owner ID</th>
            <th>Products</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OwnerId</td>
                <td>
                    <ul>
                        @foreach (var product in order.MusicRecordsInOrder)
                        {
                            <li>@product.Title - @product.Artist</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
