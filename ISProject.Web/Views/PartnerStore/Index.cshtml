@model (List<ISProject.Domain.PartnerStoreAlbum> Albums, List<ISProject.Domain.PartnerStoreArtist> Artists)

<h1>Album List</h1>

@if (Model.Albums != null && Model.Albums.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Album Name</th>
                <th>Release Date</th>
                <th>Rating</th>
                <th>Price</th>
                <th>Artist</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var album in Model.Albums)
            {
                <tr>
                    <td>@album.AlbumName</td>
                    <td>@album.ReleaseDate.ToString("yyyy-MM-dd")</td>
                    <td>@album.Rating</td>
                    <td>@album.Price.ToString("C")</td>
                    <td>@album.Artist?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No albums found.</p>
}

<h1>Artist List</h1>

@if (Model.Artists != null && Model.Artists.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Artist Name</th>
                <th>Artist Image</th>
                <th>Number of Albums</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Model.Artists)
            {
                <tr>
                    <td>@artist.Name</td>
                    <td>
                        <img src="@artist.ArtistImage" alt="@artist.Name" style="width:100px; height:100px;" />
                    </td>
                    <td>@artist.Albums?.Count ?? 0</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No artists found.</p>
}
